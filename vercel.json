{
  "builds": [
    {
      "src": "learnflow-app/app/frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.12"
      }
    }
  ],
  "env": {
    "NEXT_PUBLIC_USER_SERVICE_URL": "",
    "NEXT_PUBLIC_PRODUCT_SERVICE_URL": "",
    "NEXT_PUBLIC_ORDER_SERVICE_URL": "",
    "NEXT_PUBLIC_CHAT_SERVICE_URL": ""
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "learnflow-app/app/frontend"
    }
  ]
}
