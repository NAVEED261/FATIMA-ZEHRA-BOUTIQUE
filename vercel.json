{\n  "version": 2,\n  "buildCommand": "cd learnflow-app/app/frontend && npm install && npm run build",\n  "installCommand": "npm install && pip install -r api/requirements.txt",\n  "env": {\n    "NEXT_PUBLIC_USER_SERVICE_URL": "@user_service_url",\n    "NEXT_PUBLIC_PRODUCT_SERVICE_URL": "@product_service_url",\n    "NEXT_PUBLIC_ORDER_SERVICE_URL": "@order_service_url",\n    "NEXT_PUBLIC_CHAT_SERVICE_URL": "@chat_service_url",\n    "PYTHON_VERSION": "3.12"\n  },\n  "builds": [\n    {\n      "src": "learnflow-app/app/frontend/package.json",\n      "use": "@vercel/next",\n      "config": {\n        "maxLambdaSize": "50mb"\n      }\n    },\n    {\n      "src": "api/index.py",\n      "use": "@vercel/python",\n      "config": {\n        "maxLambdaSize": "50mb",\n        "runtime": "python3.12"\n      }\n    }\n  ],\n  "routes": [\n    {\n      "src": "/api/(.*)",\n      "dest": "/api/index.py"\n    },\n    {\n      "src": "/(.*)",\n      "dest": "learnflow-app/app/frontend"\n    }\n  ]\n}